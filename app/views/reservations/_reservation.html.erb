<div id="<%= dom_id reservation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">予約日時</strong>
    <%= reservation.reserved_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">LINE ユーザーID</strong>
    <%= reservation.line_user.id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">LINE 表示名</strong>
    <%= reservation.line_user.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "詳細", reservation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to '編集', edit_reservation_path(reservation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
